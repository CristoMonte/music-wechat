
.item{
    border-left: 0;
    border-right: 0;
}
.item-left{
    margin-left: 10px;
    margin-top: 5px;
    overflow: hidden;
}
.item-left .title{
    font-size: 16px;
    color: #333;
}
.item_left .tag{
    margin-top: 30px;
    border:1px solid #29cc6d;
    border-radius: 2px;
    color: #29cc6d;
    display: inline-block;
    padding: 2px 4px;
    font-size: 12px;
    line-height: 16;
    text-align: center;
}
.item_right .price{
    font-size: 12;
    color: #cf616a;
}